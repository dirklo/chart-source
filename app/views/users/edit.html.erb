<main class="container">
    <section class="edit_user_header">
        <h1>User Settings</h1>
        <%= render 'layouts/error_field', item: @user %>
        <%= render 'layouts/flash_field'%>
    </section>
    <section class="edit_user_body">
        <%= form_for @user do |f| %>
            <%= f.label :username, "Username:" %><br> 
            <%= f.text_field :username %><br><br>
            <%= f.label :email, "Email:" %><br>
            <%= f.text_field :email %><br><br>
            <%= f.submit "Update Settings", class: 'button' %>
        <% end %>
        <br><br>
        <button>
            <%= link_to "Change Password", user_edit_password_path(@user) %>
        </button>
        <br><br>
        <%= button_to "Delete Account", current_user, method: :delete, data: {confirm: "Are you sure you want to delete your account?"}, class: "button" %>
    </section>
</main>