<div class="arrangement_card">
    <div class="accordion">
        <div class="accordion_title" onclick="accordionAction(this)">
            <span>
                <%= arrangement.song.name %> - 
                <%= arrangement.song.artist.name %>
            </span>
            <span>
                <button class="add_to_setlist_button">
                    >
                </button>
            </span>
        </div>
        <div class="accordion_details">
            <%= render partial: 'arrangements/arrangement_details', :locals => {user: @user, arrangement: arrangement} %>
        </div>
    </div>
</div>
