<main class="container">
    <section class="show_genre_header">
        <h1><%= @genre.name %></h1>
        <h2>Arrangements:</h2>
    </section>
    <section class="show_genre_body">
        <div>
            <span>
                <h2>Song</h2>
            </span>
            <span>
                <h2>Artist</h2>
            </span>
        </div>
        <hr>
        <br>
        <% @genre.arrangements.each do |arrangement| %>
            <div>
                <span>
                    <%= link_to arrangement.song.name, arrangement %>
                </span>
                <span>
                    <%= link_to arrangement.artist.name, arrangement.artist %>
                </span>            
            </div>
        <% end %>
    <br>
    </section>
</main>