<main class="container">
    <section class="show_artist_header">
        <h1><%= @artist.name %></h1>
    </section>
    <section class="show_artist_body">
        <h2>Songs and Arrangements:</h2>
        <ul>
            <% @artist.songs.each do |song| %>
                <li><%= link_to song.name, user_song_path(@user, song) %></li>
                <h3>Arrangements:</h3>
                <ul>
                    <% song.arrangements.each do |arrangement| %>
                        <li><%= link_to arrangement.arranger.name, user_arranger_path(@user, arrangement.arranger) %></li>
                    <% end %>
                </ul>
            <% end %>
        </ul>
    </section>
    <section class="show_artist_footer">
    
    </section>
</main>